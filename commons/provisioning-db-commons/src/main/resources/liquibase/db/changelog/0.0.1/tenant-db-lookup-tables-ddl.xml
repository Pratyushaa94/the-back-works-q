<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.33.xsd">

    <!-- Lookup tables. -->
    <changeSet id="0.0.1-ddl-lookup-1" author="Subbu">
        <!-- Table: permission -->
        <createTable tableName="permission">
            <column name="code" type="VARCHAR(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(128)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
        <!-- Creating index on the name column -->
        <createIndex indexName="idx_permission_n" tableName="permission">
            <column name="name"/>
        </createIndex>

        <!-- Table: data_type -->
        <createTable tableName="data_type">
            <column name="code" type="VARCHAR(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(128)"/>
        </createTable>
        <!-- Creating index on the name column -->
        <createIndex indexName="idx_data_type_n" tableName="data_type">
            <column name="name"/>
        </createIndex>


        <!-- Table: constraint_type -->
        <createTable tableName="constraint_type">
            <column name="code" type="VARCHAR(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(128)"/>
        </createTable>
        <!-- Creating index on the name column -->
        <createIndex indexName="idx_constraint_type_n" tableName="constraint_type">
            <column name="name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>